{
  "jsc": {
    "target": "es2021",
    "parser": {
      "syntax": "typescript",
      "decorators": true,
      "dynamicImport": true
    },
    "transform": {
      "decoratorMetadata": true,
      "legacyDecorator": true
    },
    "keepClassNames": true,
    "externalHelpers": true,
    "loose": false
  },
  "module": {
    "type": "es6",
    "strict": true,
    "noInterop": true
  },
  "exclude": ["./src/**/.*.spec.ts$", "./**/.*.js$"],
  "sourceMaps": true
}
